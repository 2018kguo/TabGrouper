{
  "name": "TabGrouper",
  "version": "2.0",
  "description": "Sort tabs by URL automatically when you open them",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/tg16.png",
      "32": "images/tg32.png",
      "48": "images/tg48.png",
      "128": "images/tg128.png"
    }
  },
  "icons": {
    "16": "images/tg16.png",
    "32": "images/tg32.png",
    "48": "images/tg48.png",
    "128": "images/tg128.png"
  },
  "manifest_version": 2
}
